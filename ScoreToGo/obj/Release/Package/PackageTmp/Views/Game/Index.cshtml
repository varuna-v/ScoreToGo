@model ScoreToGo.ViewModels.GamePlayModel
@{
    ViewBag.Title = "Game";
}

<h2>Game</h2>

@using (Html.BeginForm())
{
    <div id="gameplayRotation">
        <div class="container-fluid pad-20">
            <span class="col-lg-2" id="0.3">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[0].ShirtNumbers[3] </span>
            <span class="col-lg-2" id="0.2">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[0].ShirtNumbers[2]</span>
            <span class="col-lg-2" id="0.1">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[0].ShirtNumbers[1]</span>
        </div>
        <div class="container-fluid pad-20">
            <span class="col-lg-2" id="0.4">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[0].ShirtNumbers[4]</span>
            <span class="col-lg-2" id="0.5">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[0].ShirtNumbers[5]</span>
            <span class="col-lg-2" id="0.0">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[0].ShirtNumbers[0]</span>
        </div>
        <div class="container-fluid pad-20">
            <button type="submit" name="PointWinner" value="0" class="btn">Team A </button>
            Points: @Model.Sets[@Model.CurrentSetNumber].Score[0];
            Sets: @Model.SetWins[0];
        </div>

        <hr class="pad-0 mar-0" />

        <div class="container-fluid pad-20">
            <span class="col-lg-2" id="1.3">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[1].ShirtNumbers[3]</span>
            <span class="col-lg-2" id="1.2">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[1].ShirtNumbers[2]</span>
            <span class="col-lg-2" id="1.1">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[1].ShirtNumbers[1]</span>
        </div>
        <div class="container-fluid pad-20">
            <span class="col-lg-2" id="1.4">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[1].ShirtNumbers[4]</span>
            <span class="col-lg-2" id="1.5">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[1].ShirtNumbers[5]</span>
            <span class="col-lg-2" id="1.0">@Model.Sets[@Model.CurrentSetNumber].TeamRotations[1].ShirtNumbers[0]</span>
        </div>
        <div class="container-fluid pad-20">
            <button type="submit" name="PointWinner" value="1" class="btn">Team B </button>
            Points:   @Model.Sets[@Model.CurrentSetNumber].Score[1];
            Sets: @Model.SetWins[1];
        </div>
    </div>
}
<div id="substitutionPanel" class="hidden">
    @Html.BeginForm("Substitute")
    {
        @Html.Hidden("SubstituitionKey", "")
        <input type="text" id="newPlayerIn" />
        <input type="button" onclick="substitue()" value="Substitute" />
    }
</div>

@Html.Partial("PlayerOptionsMenu")
